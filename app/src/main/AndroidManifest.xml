<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.juliapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TechModul4">
        <activity
            android:name="com.example.juliapp.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TechModul4.NoActionBar"/>

        <activity
            android:name=".ui.slideshow.SlideDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.juliapp.ui.home.HomeDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.juliapp.ui.gallery.GalleryDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.juliapp.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.TechModul4.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>